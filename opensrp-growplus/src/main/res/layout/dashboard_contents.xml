<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/dashboardimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/dashboardhead" />
    </FrameLayout>
    <android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:background="#EFEFEF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1.5"
        grid:alignmentMode="alignBounds"
        grid:columnCount="2">

        <LinearLayout
            android:id="@+id/household_dashboard_button"
            style="?buttonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@color/status_bar_text_almost_white"
            android:gravity="center"
            android:orientation="vertical"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/household_dashboard" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/householdtitle"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="Household" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/woman_dashboard_button"
            style="?buttonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@color/status_bar_text_almost_white"
            android:gravity="center"
            android:orientation="vertical"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pregnant_woman_dashboard" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/womantitle"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="Mother" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/child_dashboard_button"
            style="?buttonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@color/status_bar_text_almost_white"
            android:gravity="center"
            android:orientation="vertical"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/child_boy_infant_dashboard" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/childtitle"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="Child" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/report_dashboard_button"
            style="?buttonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@color/status_bar_text_almost_white"
            android:gravity="center"
            android:orientation="vertical"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/report_dashboard" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/reporttitle"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="Reports" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>
</LinearLayout>