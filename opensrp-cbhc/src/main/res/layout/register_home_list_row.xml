<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/register_columns"
	android:layout_width="match_parent"
	android:layout_height="@dimen/register_list_item_row_height_cbhc"
	android:layout_margin="5dp"
	android:layout_weight="1"
	android:background="@color/white"
	android:orientation="horizontal">

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/imageView"
			android:layout_width="@dimen/cbhc_register_list_item_icon"
			android:layout_height="@dimen/cbhc_register_list_item_icon"
			android:layout_gravity="center"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="10dp"
			android:scaleType="fitXY"
			app:srcCompat="@drawable/household_cbhc_placeholder" />

		<LinearLayout
			android:id="@+id/patient_column"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="5dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp"
			android:layout_marginStart="5dp"
			android:layout_weight="1"
			android:gravity="center"
			android:orientation="vertical">

			<org.smartregister.view.customcontrols.CustomFontTextView
				android:id="@+id/patient_name"
				style="@style/CustomFontTextViewStyle.ClientList.Bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="0dp"
				android:text="Patient Name"
				android:textColor="#9d9d9d"
				android:textSize="14sp" />

			<LinearLayout
				android:id="@+id/age_ga_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/age"
					style="@style/CustomFontTextViewStyle.ClientList.Light"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="0dp"
					android:text="Age: 33"
					android:textColor="#9d9d9d"
					android:textSize="12sp" />

				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/ga"
					style="@style/CustomFontTextViewStyle.ListView.Small"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="10dp"
					android:text="GA: 12 weeks"
					android:textColor="@color/text_black"
					android:textSize="16sp"
					android:visibility="gone" />
			</LinearLayout>


			<org.smartregister.view.customcontrols.CustomFontTextView
				android:id="@+id/anc_id"
				style="@style/CustomFontTextViewStyle.ClientList.Light"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="0dp"
				android:text="ID: 3034503"
				android:textColor="#9d9d9d"
				android:textSize="12sp" />

			<org.smartregister.view.customcontrols.CustomFontTextView
				android:id="@+id/member_count"
				style="@style/CustomFontTextViewStyle.ClientList.Light"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="0dp"
				android:text="ID: 3034503"
				android:textColor="#9d9d9d"
				android:textSize="12sp" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/risk_layout"
			android:layout_width="@dimen/member_marker_column"
			android:layout_height="match_parent"
			android:layout_margin="5dp"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/female_child_present"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:layout_margin="1dp"
					android:layout_weight="1"
					app:srcCompat="@drawable/child_girl_infant" />

				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/child_girl_count"
					style="@style/CustomFontTextViewStyle.ClientList.Light"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginStart="2dp"
					android:paddingLeft="0dp"
					android:text="00"
					android:textColor="#9d9d9d"
					android:textSize="8sp" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/male_child_present"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:layout_margin="1dp"
					android:layout_weight="1"
					app:srcCompat="@drawable/child_boy_infant" />
				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/child_boy_count"
					style="@style/CustomFontTextViewStyle.ClientList.Light"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginStart="2dp"
					android:paddingLeft="0dp"
					android:text="00"
					android:textColor="#9d9d9d"
					android:textSize="8sp" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/pregnant_woman_present"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:layout_margin="1dp"
					android:layout_weight="1"
					app:srcCompat="@drawable/pregnant_woman" />
				<org.smartregister.view.customcontrols.CustomFontTextView
					android:id="@+id/pregnant_woman_count"
					style="@style/CustomFontTextViewStyle.ClientList.Light"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginStart="2dp"
					android:paddingLeft="0dp"
					android:text="00"
					android:textColor="#9d9d9d"
					android:textSize="8sp" />
			</LinearLayout>

			<TextView
				android:id="@+id/risk"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/grey_border"
				android:drawableLeft="@drawable/icon_referral_warning"
				android:drawablePadding="2dp"
				android:padding="2.5dp"
				android:text="2"
				android:textColor="@color/dark_grey_text"
				android:textSize="16sp"
				android:visibility="gone" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="10dp"
		android:gravity="center">

		<Button
			android:id="@+id/due_button"
			android:layout_width="100dp"
			android:layout_height="@dimen/register_list_item_height_cbhc_button"
			android:layout_gravity="center"
			android:layout_margin="5dp"
			android:adjustViewBounds="true"
			android:background="@drawable/due_contact"
			android:elevation="8dp"
			android:gravity="center"
			android:hapticFeedbackEnabled="true"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:stateListAnimator="@drawable/button"
			android:text="@string/add_member"
			android:textAllCaps="false"
			android:textAppearance="?android:textAppearanceSmall"
			android:textColor="#9d9d9d"
			android:textSize="14sp"
			android:typeface="normal" />

		<Button
			android:id="@+id/sync"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/transparent"
			android:elevation="8dp"
			android:padding="@dimen/advanced_search_button_padding"
			android:stateListAnimator="@drawable/button"
			android:text="@string/sync"
			android:textAllCaps="true"
			android:textAppearance="?android:textAppearanceSmall"
			android:textColor="@color/button_navy_blue"
			android:textSize="@dimen/advanced_search_text_size"
			android:visibility="gone" />

	</LinearLayout>
</LinearLayout>
