<resources>
    <!-- Base org.smartregister.immunization.sample.application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AncAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="AncAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AncAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AncAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AncDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AncFullScreenDialog" parent="AncDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@color/primaryDark</item>
    </style>

    <style name="AncAppTheme.Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textSize">@dimen/login_font_size</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="AncAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AncAppTheme.NoActionBar.NavigationDrawerStyle">
        <item name="android:textSize">20sp</item>
        <!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">70dp</item>
        <!-- item size in menu-->
    </style>

    <style name="CustomFontTextViewStyle.tabIndicator.anc" parent="CustomFontTextViewStyle.tabIndicator">
        <item name="fontVariant">medium</item>
        <item name="android:textSize">@dimen/activity_sub_title_size</item>
        <item name="android:textColor">#1fb2e5</item>
    </style>

    <style name="Material.Drawable.RadioButton.AdvancedSearch" parent="Material.Drawable.RadioButton">
        <item name="rbd_width">40dp</item>
        <item name="rbd_height">40dp</item>
        <item name="rbd_strokeSize">2dp</item>
        <item name="rbd_radius">15dp</item>
        <item name="rbd_innerRadius">10dp</item>
        <item name="rbd_strokeColor">@drawable/advanced_search_rdb_stoke_color_list</item>
    </style>

    <style name="copy_clipboard_dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="PathDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
